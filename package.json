{
  "name": "tentative-guild-mate",
  "version": "0.0.3",
  "description": "<Tentative> Guild Utility",
  "main": "main.js",
  "author": "Andrew Brainerd",
  "license": "MIT",
  "build": {
    "appId": "com.brainz.tentative-guild-mate",
    "nsis": {
      "artifactName": "tentative-guild-mate-${version}-${arch}.${ext}",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "shortcutName": "<Tentative> GuildMate"
    },
    "files": [
      "**/*",
      "build/icon.*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andrew-brainerd/tentative-guild-mate.git"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "axios": "^0.19.2",
    "chokidar": "^3.4.2",
    "dotenv": "^10.0.0",
    "electron-log": "^4.2.4",
    "electron-store": "^6.0.0",
    "electron-unhandled": "^3.0.2",
    "electron-util": "^0.17.1",
    "luaparse": "^0.3.0",
    "moment": "^2.29.1",
    "nodegit": "^0.27.0",
    "ramda": "^0.27.1",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "dev": "nodemon main.js",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "deploy": "electron-builder build --win --publish always"
  },
  "devDependencies": {
    "electron": "^9.2.0",
    "electron-builder": "^22.8.0",
    "nodemon": "^2.0.4"
  }
}
